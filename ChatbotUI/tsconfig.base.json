{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@config": ["src/config"],
      "@constants/*": ["src/constants/*"],
      "@enums": ["src/enums"],
      "@enums/*": ["src/enums/*"],
      "@typings/*": ["src/types/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
